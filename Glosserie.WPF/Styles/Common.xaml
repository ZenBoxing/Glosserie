<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Glosserie.WPF.Styles">
    
    <!--Colors-->
    <Color x:Key="RussianViolet">#111344</Color>
    <Color x:Key="Isabelline">#EFE9E7</Color>
    <Color x:Key="LavenderWeb">#DAE0F2</Color>
    <Color x:Key="MidnightBlue">#181B62</Color>
    <Color x:Key="BabyPowder">#FDFFFC</Color>
    
    <!--Brushes-->
    <SolidColorBrush x:Key="RussianVioletBrush" Color="{StaticResource RussianViolet}"/>
    <SolidColorBrush x:Key="IsabellineBrush" Color="{StaticResource Isabelline}"/>
    <SolidColorBrush x:Key="LavenderWebBrush" Color="{StaticResource LavenderWeb}"/>
    <SolidColorBrush x:Key="MidnightBlueBrush" Color="{StaticResource MidnightBlue}"/>
    <SolidColorBrush x:Key="BabyPowderBrush" Color="{StaticResource BabyPowder}"/>
    
    <!--Fonts-->
    <FontFamily x:Key="MontserratLight">pack://application;,,,/Fonts/#Montserrat Light</FontFamily>   
    <FontFamily x:Key="MontserratRegular">pack://application;,,,/Fonts/#Montserrat Regular</FontFamily>   
    <FontFamily x:Key="MontserratSemiBold">pack://application;,,,/Fonts/#Montserrat SemiBold</FontFamily>

    <Image x:Key="BookShelf" Source="/Images/BookShelfMain.png"/>

</ResourceDictionary>