<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Glosserie.WPF.Styles">
    
    <!--Colors-->
    <Color x:Key="ColorPrimary1">#111344</Color>
    <Color x:Key="ColorPrimary2">#DAE0F2</Color>
    
    <!--Brushes-->
    <SolidColorBrush x:Key="BrushPrimary1" Color="{Binding ColorPrimary1}"/>
    <SolidColorBrush x:Key="BrushPrimary2" Color="{Binding ColorPrimary2}"/>


</ResourceDictionary>