<UserControl x:Class="Glosserie.WPF.Controls.CreateVocabListForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Glosserie.WPF.Controls"
             mc:Ignorable="d"
             x:Name="_this"
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/> 
        </Grid.RowDefinitions>
        <Rectangle Fill="{StaticResource MidnightBlueBrush}"
                   Grid.Row="0"/>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Grid.Row="0">
            <Label Content="CREATE"
                   FontFamily="{StaticResource MontserratRegular}"
                   Foreground="{StaticResource BabyPowderBrush}"
                   FontSize="30"
                   Margin="20 0 0 0"/>
            <Button Content="▼"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="{StaticResource MontserratRegular}"
                    Foreground="{StaticResource BabyPowderBrush}"
                    FontSize="20"/>
        </StackPanel>
        <Rectangle Grid.Row="1"
                   Fill="{StaticResource BabyPowderBrush}">
            <Rectangle.Style>
                <Style TargetType="{x:Type Rectangle}" >
                </Style>
            </Rectangle.Style>
        </Rectangle>
        <StackPanel x:Name="MainControlPanel"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Grid.Row="1"
                    
                    >
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsOpen, ElementName=_this}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=IsOpen, ElementName=_this}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>    
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Content="Add File: "
                   FontFamily="{StaticResource MontserratRegular}"
                   Foreground="{StaticResource MidnightBlueBrush}"
                   FontSize="20"
                   VerticalAlignment="Center"
                   Margin="40 20 0 0"/>
                <TextBox Width="150"
                         Height="30"
                         Margin="0 20 0 0"
                         VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Content="List Name"
                   FontFamily="{StaticResource MontserratRegular}"
                   Foreground="{StaticResource MidnightBlueBrush}"
                   FontSize="20"
                   VerticalAlignment="Center"
                   Margin="40 20 0 0"/>
                <TextBox Width="150"
                         Height="30"
                         Margin="0 20 0 0"
                         VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Content="Words: "
                   FontFamily="{StaticResource MontserratRegular}"
                   Foreground="{StaticResource MidnightBlueBrush}"
                   FontSize="20"
                   VerticalAlignment="Center"
                   Margin="40 20 0 0"/>
                <ComboBox Width="100"
                         Height="30"
                         Margin="0 20 0 0" 
                         Background="{StaticResource MidnightBlueBrush}"
                         VerticalAlignment="Center"/>
            </StackPanel>
            <Button Content="CREATE"
                    Height="30"
                    Width="70"
                    Margin="0 30"/>
        </StackPanel>
    </Grid>
</UserControl>
