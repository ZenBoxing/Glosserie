<UserControl x:Class="Glosserie.WPF.Controls.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Glosserie.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250"
             FontFamily="{StaticResource MontserratLight}">
    <Border BorderBrush="{StaticResource MidnightBlueBrush}"
            BorderThickness="5"
            CornerRadius="10"
            MaxHeight="350"
            MaxWidth="350"
            >
        <Grid Background="{StaticResource MidnightBlueBrush}"
              MaxHeight="350"
              MaxWidth="350"
              RenderOptions.EdgeMode="Aliased">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Image Source="/Images/LibraryBooks1.png"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0 5 0 0"
                   MaxHeight="60"
                   MaxWidth="60"/>
            <TextBlock Text="WELCOME TO GLOSSERIE"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource BabyPowderBrush}"
                       FontSize="20"
                       FontFamily="{StaticResource MontserratRegular}"/>
            <local:SignInBox Grid.Row="2" 
                    MaxHeight="30"
                    Margin="5 5 5 5"/>
             <local:PasswordBox Grid.Row="3"
                    MaxHeight="30"
                    Margin="5 0 5 0"/>
            <Button Style="{StaticResource SignInButton}" 
                    Grid.Row="4" 
                    Content="SIGN-IN"
                    Margin="0 10 0 0"
                    MaxHeight="35"
                    MaxWidth="175">
            </Button>
        </Grid>
        
    </Border>
            
    
</UserControl>
